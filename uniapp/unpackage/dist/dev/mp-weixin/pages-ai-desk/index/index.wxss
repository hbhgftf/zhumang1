
.chat-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 自定义样式 */
 .tui-chat-input {
  background-color: #ffffff;
  border-top: 1px solid #e5e5e5;
}
 .tui-message-list {
  background-color: #f5f5f5;
  padding: 10rpx;
}
 .tui-message-item {
  margin: 10rpx 0;
}
 .tui-message-content {
  max-width: 70%;
  border-radius: 8rpx;
}
 .tui-message-sender {
  font-size: 24rpx;
  color: #999;
}
 .tui-message-time {
  font-size: 24rpx;
  color: #999;
}
 .tui-message-status {
  font-size: 24rpx;
  color: #999;
}

/* 客服相关样式 */
 .tui-customer-service {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 10rpx;
}
 .tui-customer-service-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
 .tui-customer-service-content {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}
