.branch-body {
  display: flex;
  min-width: 0;
  box-sizing: border-box;
  padding: 12px 14px;
  font-size: 14px;
  color: #000;
  letter-spacing: 0;
  word-wrap: break-word;
  word-break: break-all;
  position: relative;
}
.branch-body .branch-main {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  align-content: flex-start;
  border: 0 solid black;
  margin: 0;
  padding: 0;
  min-width: 0;
}
.branch-bubble {
  background: #f3f4f7;
  border-radius: 0 10px 10px;
  margin-bottom: 8px;
}
.branch-bubble-h5 {
  background: #fff;
  border-radius: 0 10px 10px;
  margin-bottom: 8px;
}
.branch-item {
  color: #1c66e5;
  cursor: pointer;
}
.warning-item {
  color: #ff9800;
}
.branch-card {
  min-width: 250px;
  max-width: 350px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.branch-item-selected {
  cursor: none;
  color: #a0a7b8;
  opacity: 0.6;
}
.branch-title-icon {
  margin-right: 5px;
  align-items: flex-start !important;
  margin-top: 2px;
}